style.
  html {
    min-width: 350px;
    min-height: 300px;
    height: 100%;
    width: 100%;
  }
  body {
    overflow: hidden;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    font-family: "Helvetica Neue", "Lucida Grande", sans-serif;
    font-size: 75%;
    background-color: rgb(53, 59, 70);
    color: #fff;
  }
  a {
    color: #fff;
  }
  #root {
    height: 100%;
  }
  #root > div {
    height: 100%;
  }
  .ReactCodeMirror {
    overflow: auto;
    height: 100%;
  }
  .CodeMirror {
    height: 100% !important;
  }
